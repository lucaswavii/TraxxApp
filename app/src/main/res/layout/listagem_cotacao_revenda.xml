<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:text="Quantidade Solicitado:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/textView5"
        android:layout_below="@+id/tvItemcotacao"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/tvQuantidadeCotacao"
        android:textAlignment="center"
        android:layout_below="@+id/tvItemcotacao"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Quantidade Estoque:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvQuantidadeCotacao"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Estoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/tvEstoqueCotacao"
        android:textAlignment="center"
        android:layout_below="@+id/tvQuantidadeCotacao"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Valor UnitÃ¡rio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvEstoqueCotacao"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Unitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:id="@+id/tvUnitarioCotacao"
        android:textAlignment="center"
        android:layout_below="@+id/tvEstoqueCotacao"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView6" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/imageView5"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="ckBoxCotacaoRevenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckBoxCotacaoRevenda"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:button="@drawable/custom_checkbox_design" />

    <TextView
        android:text="Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemcotacao"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/ckBoxCotacaoRevenda"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>