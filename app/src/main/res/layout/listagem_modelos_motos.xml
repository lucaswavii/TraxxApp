<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:id="@+id/imgMotosModelos"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modelo Moto"
        android:id="@+id/tvModeloMoto"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgMotosModelos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição Breve"
        android:textColor="@android:color/white"
        android:id="@+id/tvDescricao"
        android:layout_below="@+id/tvModeloMoto"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgMotosModelos"
        android:layout_alignBottom="@+id/imgMotosModelos" />
</RelativeLayout>